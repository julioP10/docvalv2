
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

@{
    Layout = null;

}


@model UsuarioLoginDto

<!DOCTYPE html>
<html lang="en">
<head>
    <title>DOCVAL ACCES</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">

    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
            <input type="hidden" asp-for="Tipo"/>
            <div id="_login">
                <div class="limiter">
                    <div class="container-login100" style="background-image: url('/images/login.jpg');">
                        <div class="wrap-login100">
                            <form class="login100-form validate-form" asp-action="UserLogin" asp-controller="Login">
                                <span class="login100-form-logo">
                                    <i class="zmdi zmdi-chevron-up"></i>
                                </span>

                                <span class="login100-form-title p-b-34 p-t-27">
                                    Log in
                                </span>
                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show">
                                        <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                            <i class="nc-icon nc-simple-remove"></i>
                                        </button>
                                        <span>
                                            <b>@ViewBag.Error</b>
                                        </span>
                                    </div>
                                }
                                <div class="wrap-input100 validate-input" data-validate="Ingrese usuario">
                                    <input class="input100" autocomplete="off" type="text" asp-for="Usuarios" placeholder="Username">
                                    <span class="focus-input100" data-placeholder="&#xf207;"></span>
                                </div>

                                <div class="wrap-input100 validate-input" data-validate="Ingrese password">
                                    <input class="input100" autocomplete="off" type="password" asp-for="Password" placeholder="Password">
                                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                                </div>

                                <div class="container-login100-form-btn">
                                    <button class="login100-form-btn">
                                        Login
                                    </button>
                                </div>

                                <div class="text-center p-t-90">
                                    <a class="txt1" id="_recupararView" href="#">
                                        Olvidò Password?
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div id="_recuperar" style="display:none">
                <div class="limiter">
                    <div class="container-login100" style="background-image: url('/images/login.jpg');">
                        <div class="wrap-login100">
                            <form class="login-form" asp-action="RecuperarUsuario" asp-controller="Login">
                                <span class="login100-form-logo">
                                    <i class="zmdi zmdi-chevron-up"></i>
                                </span>

                                <span class="login100-form-title p-b-34 p-t-27">
                                   Recuperar Usuario
                                </span>
                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show">
                                        <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                            <i class="nc-icon nc-simple-remove"></i>
                                        </button>
                                        <span>
                                            <b>@ViewBag.Error</b>
                                        </span>
                                    </div>
                                }
                                @if (ViewBag.Success != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show">
                                        <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                                            <i class="nc-icon nc-simple-remove"></i>
                                        </button>
                                        <span>
                                            <b>@ViewBag.Success</b>
                                        </span>
                                    </div>
                                }
                                <div class="wrap-input100" data-validate="Ingrese usuario">
                                    <input class="input100" autocomplete="off" type="text" asp-for="Usuarios" placeholder="Usuario o correo">
                                    <span class="focus-input100" data-placeholder="&#xf207;"></span>
                                </div>

                                <div class="container-login100-form-btn">
                                    <button class="login100-form-btn">
                                        Enviar
                                    </button>
                                </div>

                                <div class="text-center p-t-90">
                                    <a id="_loginView" class="txt1" href="#">
                                        Acceder
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

    <div id="dropDownSelect1"></div>
    <script src="~/js/core/jquery.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/main.js"></script>
    <script>
        $("#_recupararView").on("click", function () {
            $("#_login").css("display", "none");
            $("#_recuperar").css("display", "");
        });
        $("#_loginView").on("click", function () {
            $("#_recuperar").css("display", "none");
            $("#_login").css("display", "");
            
         
        });
        if ($("#Tipo").val() =="Recuperar") {
            $("#_login").css("display", "none");
            $("#_recuperar").css("display", "");
        }
    </script>
</body>
</html>