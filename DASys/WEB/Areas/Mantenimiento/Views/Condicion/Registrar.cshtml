@{
    Layout = "~/Views/Shared/_LayoutCRM.cshtml";
    ViewData["Title"] = "Inicio > Mantenimiento > Condicions";
}
@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@using Entidad
@using WEB
@model CondicionConsultaDto
<div id="Condicion" class="col-md-12">
    <div class="card ">
        @*L: Formulario*@
        <div class="card-body ">
            <form id="formCondicion">
                <div class="row justify-content-around b-formulario">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <input type="text" asp-for="Nombre" maxlength="150" min="2" class="form-control" required>
                            <label class="floating-label">Nombre</label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <select asp-for="IdRegimen" asp-items="@(new SelectList(DropDown.ListaRegimen(Model.IdEmpresa),"Value","Nombre"))" required class="form-control">
                                <option value="0">Elegir Regimen</option>
                            </select>
                            <label class="floating-label">Regimen</label>
                        </div>
                    </div>
                    <div class="col-md-4 col-md-offset-2">
                        <div class="anil_nepal">
                            <label class="switch switch-left-right">
                                <input asp-for="IdEstado" checked class="switch-input" type="checkbox">
                                <span class="switch-label" data-on="SI" data-off="NO"></span> <span class="switch-handle"></span>
                            </label>
                            Estado
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="lu-form-actions">
                            <button type="button" class="btn btn-columbia2" id="btn-RegresarCondicion">Regresar</button>
                            <button type="button" class="btn btn-columbia1" id="btn-RegistrarCondicion">Registrar</button>
                        </div>
                    </div>
                </div>
                <input type="hidden" asp-for="IdCondicion" />
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script src="@Url.Content("~/js/App/ViewJs/Mantenimiento/Condicion.js")"></script>
    <script>
        urlCondicionIndex = '/Mantenimiento/Condicion/Index';
        urlCondicionPaginado = '/Mantenimiento/Condicion/Listar';
        urlRegistrarCondicion = '/Mantenimiento/Condicion/Registrar';
        urlActualizarCondicion = '/Mantenimiento/Condicion/Actualizar';
        urlConsultarCondicion = '/Mantenimiento/Condicion/Consultar';
        urlEliminarCondicion = '/Mantenimiento/Eliminar/Registrar';
        urlMantenimientoCondicion = '/Mantenimiento/Condicion/Mantenimiento';
        nomUbigeo = '';
        $(document).ready(function () {
            Condicion.init();
        });
    </script>


}