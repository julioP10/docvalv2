@{
    Layout = "~/Views/Shared/_LayoutCRM.cshtml";
    ViewData["Title"] = "Inicio > Mantenimiento > Entidads";
}
@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@using Entidad
@using WEB
@model EntidadConsultaDto
<div id="Entidad" class="col-md-12">
    <div class="card ">
        @*L: Formulario*@
        <div class="card-body ">
            <form id="formEntidad">
                <div class="row justify-content-around b-formulario">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <input type="text" asp-for="Nombre" maxlength="150" min="2" class="form-control" required>
                            <label class="floating-label">Nombre</label>
                        </div>
                    </div>
                    <div class="col-md-4 col-md-offset-2">
                        <div class="anil_nepal">
                            <label class="switch switch-left-right">
                                <input asp-for="IdEstado" checked class="switch-input" type="checkbox">
                                <span class="switch-label" data-on="SI" data-off="NO"></span> <span class="switch-handle"></span>
                            </label>
                            Estado
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="lu-form-actions">
                            <button type="button" class="btn btn-columbia2" id="btn-RegresarEntidad">Regresar</button>
                            <button type="button" class="btn btn-columbia1" id="btn-RegistrarEntidad">Registrar</button>
                        </div>
                    </div>
                </div>
                <input type="hidden" asp-for="IdEntidad" />
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script src="@Url.Content("~/js/App/ViewJs/Mantenimiento/Entidad.js")"></script>
    <script>
        urlEntidadIndex = '/Mantenimiento/Entidad/Index';
        urlEntidadPaginado = '/Mantenimiento/Entidad/Listar';
        urlRegistrarEntidad = '/Mantenimiento/Entidad/Registrar';
        urlActualizarEntidad = '/Mantenimiento/Entidad/Actualizar';
        urlConsultarEntidad = '/Mantenimiento/Entidad/Consultar';
        urlEliminarEntidad = '/Mantenimiento/Eliminar/Registrar';
        urlMantenimientoEntidad = '/Mantenimiento/Entidad/Mantenimiento';
        nomUbigeo = '';
        $(document).ready(function () {
            Entidad.init();
        });
    </script>


}