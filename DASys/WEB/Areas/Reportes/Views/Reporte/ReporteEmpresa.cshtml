@{
    Layout = "~/Views/Shared/_LayoutCRM.cshtml";
    ViewData["Title"] = "Inicio > Mantenimiento > ReporteColaborador";
}
@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@section styles{
    <link rel="stylesheet" href="@Url.Content("~/css/App/dataTables/jquery.dataTables.min.css")" />
    <link href="~/css/App/dataTables/jquery.dataTables.responsive.min.css" rel="stylesheet" />
}
@using Entidad
@using WEB
@model Entidad.ReporteFilterDto
<div id="ReporteEmpresa">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @*L: Titulo y Buscador*@
                    <div class="row b-top1">
                        <div class="col-sm-6 mr-auto b-title">
                            <h2>Reporte de Empresa</h2>
                        </div>
                        <div class="col-sm-6 ml-auto b-buscador">
                        </div>
                    </div>

                    @*L: Filtros y Actions*@
                    <div class="row b-top3 align-items-center">
                        <div class="col-lg-12 b-filtros">
                            <div class="align-items-center form-row">

                                <div class="col-sm-3 form-group">
                                    <select asp-for="TipoEmpresaSearch" class="form-control">
                                        <option value="NINGUNO">Seleccione Tipo</option>
                                        <option value="PRINCIPAL">Principal</option>
                                        <option value="CONTRATISTA">Contratista</option>
                                        <option value="SUBCONTRATISTA">SubContratista</option>
                                    </select>
                                </div>
                                <div class="col-sm-3 form-group">
                                    <select asp-for="IdCategoriaSearch" class="form-control">
                                        <option value="0">Elegir Categoria</option>
                                    </select>

                                </div>
                                <div class="col-sm-3 form-group">
                                    <input type="text" asp-for="NombreSearch" class="form-control" onkeypress="ReporteEmpresa.buscar(event)" placeholder="Nombre">
                                </div>
                            </div>

                        </div>

                        <div class="inscribir-separador mx-3 w-100"></div>
                    </div>
                    @*L: Datatable*@
                    <div class="row b-main">
                        <div class="col-sm-12">
                            <table class="dataTable  stripe row-border" style="width:100%" id="ReporteEmpresaDataTable">
                                <thead>
                                    <tr>
                                        <th class="hidden-480 dt-head-center">Codigo</th>
                                        <th class="hidden-480 dt-head-center">Razon Social</th>
                                        <th class="hidden-480 dt-head-center">Ruc</th>
                                        <th class="hidden-480 dt-head-center">Direccion</th>
                                        <th class="hidden-480 dt-head-center">Tipo</th>
                                        <th class="hidden-480 dt-head-center">Empresa Principal</th>
                                        <th class="hidden-480 dt-head-center">Categoria</th>
                                        <th class="hidden-480 dt-head-center">Estado</th>

                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </div>

                </div>
                <!-- end content-->
            </div>
            <!--  end card  -->
        </div>
        <!-- end col-md-12 -->
    </div>
    <!--Modal-->
</div>

@section Scripts{
    <script src="@Url.Content("~/js/App/dataTables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/js/App/dataTables/jquery.dataTables.fnReloadAjax.js")"></script>
    <script src="~/js/App/dataTables/dataTables.buttons.min.js"></script>
    <script src="~/js/App/dataTables/buttons.flash.min.js"></script>
    <script src="~/js/App/dataTables/jszip.min.js"></script>
    <script src="~/js/App/dataTables/buttons.html5.min.js"></script>
    <script src="~/js/App/dataTables/jquery.dataTables.responsive.min.js"></script>
    <script src="~/js/App/ViewJs/Reportes/ReporteEmpresa.js"></script>
    <script>
        urlReporteEmpresaIndex = '/Reportes/Reporte/ReporteEmpresa';
        urlReporteEmpresaListar = '/Reportes/Reporte/ListarReporteEmpresa';
        $(document).ready(function () {
            ReporteEmpresa.init();
        });

    </script>


}